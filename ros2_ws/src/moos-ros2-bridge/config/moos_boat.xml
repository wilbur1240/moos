  <!-- Example: MOOS to ROS (send status to ROS side) -->
  <message>
    <moosname>MOOS_ROS_BRIDGE_STATUS</moosname>
    <rosname>moos2ros/STATUS</rosname>
    <moostype>string</moostype>
    <rostype>std_msgs/String</rostype>
    <direction>toROS</direction>
  </message>

  <!-- Boat Position (X, Y, Heading) -->
  <message>
    <moosname>NAV_X</moosname>
    <rosname>moos2ros/nav_x</rosname>
    <moostype>double</moostype>
    <rostype>std_msgs/Float64</rostype>
    <direction>toROS</direction>
  </message>

  <message>
    <moosname>NAV_Y</moosname>
    <rosname>moos2ros/nav_y</rosname>
    <moostype>double</moostype>
    <rostype>std_msgs/Float64</rostype>
    <direction>toROS</direction>
  </message>

  <message>
    <moosname>NAV_HEADING</moosname>
    <rosname>moos2ros/nav_heading</rosname>
    <moostype>double</moostype>
    <rostype>std_msgs/Float64</rostype>
    <direction>toROS</direction>
  </message>

  <!-- Desired Rudder and Thrust -->
  <message>
    <moosname>DESIRED_THRUST</moosname>
    <rosname>moos2ros/desired_thrust</rosname>
    <moostype>double</moostype>
    <rostype>std_msgs/Float64</rostype>
    <direction>toROS</direction>
  </message>

  <message>
    <moosname>DESIRED_RUDDER</moosname>
    <rosname>moos2ros/desired_rudder</rosname>
    <moostype>double</moostype>
    <rostype>std_msgs/Float64</rostype>
    <direction>toROS</direction>
  </message>

</moosrosconfig>
